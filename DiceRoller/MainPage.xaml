<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <ScrollView>

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
             Text = "Sorteio de dados"
             FontSize = "40"
             FontFamily="Arial"
            HorizontalOptions = "Center" />
            
                <Image
                     x:Name="Dado_1"
                     Source="dado_1.PNG"
                    HeightRequest="225"
                    Aspect="AspectFit"
                    SemanticProperties.Description="Dado para simbolizar" />

            <!--Picker é uma lista que da varias opçoes para selecionar-->
            <Picker
                x:Name="SelecaoPicker"
                Title="Selecione o numero do dado">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button
                x:Name="DiceButton"
                Text="Girar o dado" 
                SemanticProperties.Hint="Botão que vai gerar aleatoriamente o lado do dado"
                Clicked="DiceButton_Clicked"
                HorizontalOptions="Fill" />

            <Label
                 x:Name="StreakLabel"
                 Text="Você ganhou 0 vezes em sequencia."
                 HorizontalOptions="Center"/>

            <Label
                 x:Name="PlayerPointLabel"
                 Text="Você ganhou 0 vezes ao todo."
                 HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
